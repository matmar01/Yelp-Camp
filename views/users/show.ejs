<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1><%= user.username + " " + "the shit is here" %></h1>
            <div class="thumbnail">
                <img src="<%= user.avatar %>" alt="user profile photo">
                <div class="caption">
                    <a href="mailto:<%= user.email %>">user.email</a>
                </div>
            </div>
            <p>
                Lorem Lipsum dolor si amet es pulchram orbitum.
            </p>
        </div>
        <div class="col-md-8">
            <h3><%= user.username %> Campgrounds</h3>
            <ul>
                <% campgrounds.forEach(function(campground) { %>
                    <li><a href="campground/<%= campground.id %>"><%= campground.name %></a>
                    <img src="<%= campground.image %>" alt="campground image"></li>
                    <% }) %> 
            </ul>
            
        </div>
    </div>
</div>


<% include ../partials/footer %>