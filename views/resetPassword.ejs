<% include partials/header %>

<div class="row">
    <h1 class="text_align">Request new Password</h1>
    <div class="log_reg_form">
        <form action="/resetPassword" method="POST">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input id="email" class="form-control" type="email" name="email" autofocus placeholder="Put your e-mail here">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Reset Password!">
            </div>
        </form>
    </div>
</div>

