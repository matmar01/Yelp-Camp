<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-12 mb-3">
        <h3 class="text-center mb-3">Edit this comment</h3>
    </div>
    <div class="col-md-5">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-lg btn-primary">Submit!</button>
            </div>
        </form>
        <a class="btn btn-md btn-warning" href="/campgrounds/">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>