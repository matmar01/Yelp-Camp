<% include partials/header %>

<div class="row">
    <h1 class="text_align">Sign Up</h1>
    <div class="log_reg_form">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="avatar">Avatar Url</label>
                <input class="form-control" type="text" name="avatar" placeholder="Avatar URL">
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input class="form-control" type="email" name="email" placeholder="E-Mail">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="passord" name="password" placeholder="Password">            
            </div>
            <div class="form-group">
                <label for="adminCode">Admin Code</label>
                <input class="form-control" type="text" name="adminCode" placeholder="Admin code">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign Up!">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include partials/footer %>