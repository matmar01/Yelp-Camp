<% include ../partials/header %>


<div class="row">
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div style="width:30%;margin:30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" value="<%= campground.price %>" step="0.01" min="0">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/*">
            </div> 
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= campground.description %>">
            </div> 
            <div class="form-group">
                <button class="btn btn-block btn-lg btn-primary">Submit!</button>
            </div>
        </form>
        <a class="btn btn-md btn-warning" href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>
    