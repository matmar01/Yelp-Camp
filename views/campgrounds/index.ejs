<% include ../partials/header %>
    
<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Yelp Camp</h1>
        <p>View our handpicked campgrounds from the world?</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
        </p>
        <p>
            <form method="GET" action="/campgrounds" class="form-inline">
                <input type="text" name="search" class="form-control" placeholder="Campground search...">
                <input type="submit" value="Search" class="btn btn-default">
            </form>
        </p>
    </div>
</header>

<div class="row text-center" style="display:flex;flex-wrap:wrap;">
    <% if(noMatch) { %>
        <div class="col-md-12">
            <h3>
                <%= noMatch %>
            </h3>
        </div>  
        <% } %>
    <% campgrounds.forEach(function(campground) { %>
        <div class="col-md-4 col-sm-6 mb-3">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-md btn-primary">More info</a>
                </div>
            </div>
        </div>    
        <% }); %>
</div>    
<% include ../partials/footer %>   